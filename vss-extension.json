{
    "manifestVersion": 1,
    "id": "sql-toolkit-azure",
    "name": "SQL Toolkit for Azure",
    "version": "1.1.0",
    "public": true,
    "publisher": "andrewlackenby",
	"categories": [
        "Build and release"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "SQL Toolkit for Azure",

    "icons": {
        "default": "icon.jpg"        
    },
    "content": {
        "details": {
            "path": "readme.md"
    },
    "license": {
            "path": "LICENSE.txt"
    }
    },
    "files": [
        {
            "path": "RunStoredProcedureAzure"
        },
        {
            "path": "RunSingleSqlScriptAzure"
        },
        {
            "path": "RunSqlScriptsAzure"
        }
    ],
    "contributions": [
        {
            "id": "runstoredprocedureazure",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "RunStoredProcedureAzure"
            }
        },
        {
            "id": "runsinglesqlscriptazure",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "RunSingleSqlScriptAzure"
            }
        },
        {
            "id": "runsqlscriptsazure",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "RunSqlScriptsAzure"
            }
        }
    ]
}